{
  "manifest_version": 3,
  "name": "Gem Bid Docs Utils",
  "version": "1.3",
  "description": "Stores CSRF token, date range, contains, and keywords; calls API with background fetch (no CORS issue).",
  "permissions": [
    "storage",
    "background",
    "alarms",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://bidplus.gem.gov.in/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}